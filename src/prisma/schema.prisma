generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(cuid())
  email String @unique
  password String
  username String
  name String
  phone String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  activity Activity[]
}

model Activity{
  id String @id @default(cuid())
  user_id String
  start_time DateTime
  end_time DateTime
  title String
  location String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user User @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}